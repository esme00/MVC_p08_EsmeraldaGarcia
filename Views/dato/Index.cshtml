<h1>Helpers</h1>
<br />
<form asp-action="CrearDato"> 
    @*Inicio del Formulario*@
    <div class="form-group row mb-4 ">

        @* NOMBRE DE USUARIO  *@

            <div class="row mt-3">
                    <div class="col-sm-2">
                        <label>
                            Nombre
                        </label>
                    </div>
                    <div class="col-sm-4">
                        @Html.TextBox("name_user", "", new { @class = "form-control" })
                    </div>

            </div>

        @* FIN NOMBRE DE USUARIO  *@

        @* CONTRASEÑA  *@

            <div class="row mt-3">
                <div class="col-sm-2">
                    @Html.Label("lblPassword", "Password")
                </div>
                <div class="col-sm-4">
                    @Html.Password("password", "", new { @class = "form-control" })
                </div>

            </div>
        @* FIN CONTRASEÑA  *@

        @* GENERO  *@   

            <div class="row mt-3"> 
                <div class="col-sm-2">
                    <label>
                        Genero
                    </label>
                    

                </div>
                <div class="col-sm-4">
                    @Html.RadioButton("genero", "Masculino", true, new { id = "id_dato" })
                    Masculino

                    @Html.RadioButton("genero", "Femenino", false, new { id = "id_dato" })
                    Femenino

                </div>

            </div>

         @* FIN GENERO *@
                         
         @* DIRECCION *@
            <div class="row mt-3">
                <div class="col-sm-2">
                    @Html.Label("lblDireccion", "Dirección")
                </div>
                <div class="col-sm-4">
                    @Html.TextArea("direction",
                         new { @class = "form-control", @placeHolder = "Ingrese la descripción", id = "id_dato" })

                </div>

            </div>
         @* FIN DIRECCION *@

         @* PASATIEMPO *@
            <div class="row mt-3">
                <div class="col-sm-2">
                    <label>Pasatiempo</label>
                </div>
                <div class="col-sm-4">
                    <label><input type="checkbox" name="pasatiempo" value="Bailar" /> Bailar</label>
                    <label><input type="checkbox" name="pasatiempo" value="Correr" /> Correr</label>
                    <label><input type="checkbox" name="pasatiempo" value="Escalar" /> Escalar</label>
                    <label><input type="checkbox" name="pasatiempo" value="Peliculas" /> Películas</label>
                </div>
             </div> 
         

         @* FIN PASATIEMPO *@

         @* CURSO *@

            <div class="row mt-3">
                <div class="col-sm-2 ">
                    <label>
                        Cursos
                    </label>
                </div>
                <div class="col-sm-4">
                    @Html.DropDownList("id_cursos", ViewData["listaDeHabilidades"] as SelectList, "--Seleccionar curso----", new { @class = "form-control" })
                </div>

            </div>
         @* FIN CURSOS *@

         @* CONOCIMIENTOS  *@

            <div class="row mt-3">
                <div class="col-sm-2">
                    <label>Conocimientos</label>
                </div>
                <div class="col-sm-4">
                    <form method="post" action="/dato/GuardarConocimientos">
                        <div class="row mt-3">
                            <div class="col-sm-4">
                                <select name="conocimientos" id="conocimientos" multiple="multiple" class="form-control">
                                <option value="C#">C#</option>
                                <option value="ASP.NE">ASP.NET</option>
                                <option value="ASP.NET CORE">ASP.NET CORE</option>
                                <option value="Azure">Azure</option>
                                </select>
                            </div>
                        </div>
                       
                    </form>
                </div>
            </div>

               
         @* FIN CONOCIMIENTOS *@
         
         @* GUARDADO *@
        <div class="row mt-4 ">
            <div class="d-grid gap-2">
                <button class="btn btn-success" type="button"> 
                    <input type="submit" class="btn-success" value="Guardar" />
                </button>
            </div>

         @* FIN GUARDADO *@

            <table class="table table-dark table-hover mt-4  ">
                
                <thead>
                    <tr class="text-md-center">
                        <th>Nombre</th>
                        <th>Genero</th>
                        <th>Pasatiempos</th>
                        <th>Cursos</th>
                        <th>Conocimientos</th>

                    </tr>
                </thead>
             
                <tbody>
                    @foreach (var dato in (IEnumerable<dynamic>)ViewData["listadodeequipo"])
                    {
                        <tr>

                            <td>@dato.nombre</td>
                            <td>@dato.genero</td>
                            <td>@dato.pasatiempo</td>
                            <td>@dato.curso</td>
                            <td>@dato.conocimientos</td>
                          
                        </tr>
                        
                    }  
                </tbody>
            </table>


    </div>
    @*Fin del Formulario*@

</form>




