<form asp-action="CrearDato"> 
    @*Inicio del Formulario*@
    <div class="form-group row mb-4">   

        @* NOMBRE DE USUARIO  *@

            <div class="row mt-3">
                    <div class="col-sm-2">
                        <label>
                            Nombre
                        </label>
                    </div>
                    <div class="col-sm-4">
                        @Html.TextBox("name_user", "", new { @class = "form-control" })
                    </div>

            </div>

        @* FIN NOMBRE DE USUARIO  *@

        @* CONTRASEÑA  *@

            <div class="row mt-3">
                <div class="col-sm-2">
                    @Html.Label("lblPassword", "Password")
                </div>
                <div class="col-sm-4">
                    @Html.Password("password", "", new { @class = "form-control" })
                </div>

            </div>
        @* FIN CONTRASEÑA  *@

        @* GENERO  *@   

            <div class="row mt-3"> 
                <div class="col-sm-2">
                    <label>
                        Genero
                    </label>
                    

                </div>
                <div class="col-sm-4">
                    @Html.RadioButton("genero", "Masculino", true, new { id = "id_dato" })
                    Masculino

                    @Html.RadioButton("genero", "Femenino", false, new { id = "id_dato" })
                    Femenino

                </div>

            </div>

         @* FIN GENERO *@
                         
         @* DIRECCION *@
            <div class="row mt-3">
                <div class="col-sm-2">
                    @Html.Label("lblDireccion", "Dirección")
                </div>
                <div class="col-sm-4">
                    @Html.TextArea("direction", "Ingrese su dirección",
                             new { @class = "form-control", id = "id_dato" })

                </div>

            </div>
         @* FIN DIRECCION *@

         @* PASATIEMPO *@
@* 
